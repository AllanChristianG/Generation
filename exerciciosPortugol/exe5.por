programa
{
	
	funcao inicio()
	{
		real a, b, c, media
		escreva("Digite respectivamente as 3 notas do aluno: ")
		leia (a, b, c)
		media = (.2 * a + .3 * b + .5 * c)
		escreva("\n A média final do aluno é de: ", media)
	}
}
